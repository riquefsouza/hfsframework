<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="hfsframework-admin"
                   namespace="hfsframework.admin.model">

  <class name="AdmLogColuna" table="adm_log_coluna">
    <id name="Nome">
      <column name="col_nome" sql-type="varchar" length="30" not-null="true" />
    </id>
    <property name="NomeExibicao">
      <column name="col_nome_exibicao" sql-type="varchar" length="100" not-null="true" />
    </property>
    <property name="Comando">
      <column name="col_comando" sql-type="varchar" length="4000" not-null="false" />
    </property>
  </class>

</hibernate-mapping>